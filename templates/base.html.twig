<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-dark justify-content-between">
        <a class="navbar-brand" href="/">
          <img src="{{ asset('build/images/library.jpeg' ) }}"
               width="50"
               height="50"
               alt="Library"
          >

          <span class="p-3">Biblioteca</span>
        </a>

        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_book') }}">
              Carti
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_author') }}">
              Autori
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_publisher') }}">
              Editori
            </a>
          </li>

        </ul>
      </nav>
    </header>
    {% block body %}{% endblock %}
  </body>
</html>
